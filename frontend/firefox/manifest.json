{
    "manifest_version": 2,
    "name": "VideoLearner",
    "version": "1.0",
    "description": "Interactive Tutorials, Straight from YouTube.",
  
    "icons": {
      "64": "icons/64.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["app.js"]
      }
    ],
    "browser_action": {
        "default_popup": "index.html",
        "browser_style": true
      },
    "permissions": [
      "activeTab",
      "http://localhost/*"
    ],
    "background": {
      "scripts": ["background.js"]
    }
  }